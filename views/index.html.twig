<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
        <title>To Do List</title>
    </head>
    <body>
        <div class="container">
            <h2>Welcome to To Do List</h2>
            <div class="row">
                <div class="col-xs-6" style="text-align:center;">
                    <form action='/categories' method='get'>
                        <button class="btn btn-default" type='submit'>Categories</button>
                    </form>
                    <p>Edit or view categories</p>
                </div>
                <div class="col-xs-6" style="text-align:center;">
                    <form action='/tasks' method='get'>
                        <button class="btn btn-default" style="padding-right:20px;padding-left:20px;" type='submit'>Tasks</button>
                    </form>
                    <p>Edit or view tasks</p>
                </div>
            </div>
        </div>
    </body>
</html>
