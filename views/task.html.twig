<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
        <title>To Do List</title>
    </head>
    <body>
        <div class="container">
            <h2>{{ task.getTaskName }}</h2>

            {% if categories is not empty %}
            <p>Here are the categories for this task:</p>
            <ul class="list-group">
                {% for category in categories %}
                    <li class="list-group-item">{{ category.getCategoryName }}</li>
                {% endfor %}
            </ul>
            {% endif %}

            <h4>Add a category to this task:</h4>
            <div class="form-group">
                <form action="/add_categories" method="post">
                    <input type="hidden" name="task_id" id ="task_id" value="{{ task.getId }}">
                    <label for="category_id">Select a category</label>
                    <select id="category_id" name="category_id" type="text">
                        {% for category in all_categories %}
                            <option value="{{ category.getId }}"> {{ category.getCategoryName }}</option>
                        {% endfor %}
                    </select>
                    <button class="btn btn-default" type="submit">Add category</button>
                </form>
            </div>
            <p><a href='/tasks'>Tasks</a></p>
        </div>
    </body>
</html>
